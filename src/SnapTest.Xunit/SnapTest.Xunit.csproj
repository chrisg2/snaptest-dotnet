<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>SnapTest.Xunit</PackageId>
    <Version>1.0.0</Version>
    <Authors>chrisg2</Authors>
    <RepositoryUrl>https://github.com/chrisg2/snaptest-dotnet</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageDescription>SnapTest.Xunit part of snaptest-dotnet, a tool to enable effective snapshot testing with .NET Core and .NET Framework. This package provides support for snapshot testing in Xunit tests.</PackageDescription>

    <TargetFramework>netcoreapp2.1</TargetFramework>

    <IsTestProject>false</IsTestProject>

    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="xunit" Version="2.4.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SnapTest\SnapTest.csproj" />
  </ItemGroup>

</Project>
